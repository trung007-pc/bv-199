@page "/abzzzs2"
@using WebClient.Service.Users
@using Core.Enum
@layout DefaultLayout
@inject NavigationManager _navigationManager;
@inject UserManagerService _userManagerService;
@inherits BaseBlazorPage

<h3>Register</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Please enter your details</h5>
        <EditForm Model="UserDto" OnValidSubmit="async () => { await HandleRegistration(); }">
            <DataAnnotationsValidator/>
            @* <ValidationSummary/> *@
            <div class="form-group">
                <label for="email">User Name</label>
                <InputText Id="email" class="form-control" @bind-Value="UserDto.UserName"/>
                <ValidationMessage For="@(() => UserDto.UserName)"/>
            </div>
            <div class="form-group">
                <label for="email">First Name</label>
                <InputText Id="email" class="form-control" @bind-Value="UserDto.FirstName"/>
                <ValidationMessage For="@(() => UserDto.FirstName)"/>
            </div>

            <div class="form-group">
                <label for="email">Last Name</label>
                <InputText Id="email" class="form-control" @bind-Value="UserDto.LastName"/>
                <ValidationMessage For="@(() => UserDto.LastName)"/>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <InputText Id="password" type="password" class="form-control" @bind-Value="UserDto.Password"/>
                <ValidationMessage For="@(() => UserDto.Password)"/>
            </div>
            <div class="form-group">
                <label for="password">Enter Again Password </label>
                <InputText Id="password" type="password" class="form-control" @bind-Value="UserDto.PasswordConfirm"/>
                <ValidationMessage For="@(() => UserDto.PasswordConfirm)"/>
            </div>
            
            <div class="form-group">
                <label for="email">User Code</label>
                <InputText Id="email" class="form-control" @bind-Value="UserDto.EmployeeCode"/>
                <ValidationMessage For="@(() => UserDto.EmployeeCode)"/>
            </div>
            
            
                  <RadzenRadioButtonList @bind-Value="UserDto.Gender">
                      <Items>
                          @foreach (var item in (Gender[])Enum.GetValues(typeof(Gender)))
                          {
                              <RadzenRadioButtonListItem Text="@(item.GetDisplayDescription())" Value="item" />
                          }
                      </Items>
                  </RadzenRadioButtonList>


            <div class="form-group">
                <label for="email">Phone Number</label>
                <InputText Id="email" class="form-control" @bind-Value="UserDto.PhoneNumber"/>
                <ValidationMessage For="@(() => UserDto.PhoneNumber)"/>
            </div>


     


            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>