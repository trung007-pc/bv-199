<RadzenPanelMenu >


    <AuthorizeView>



        @if (context.User.IsInRole("QUALITY MANAGER")
             || context.User.IsInRole("ADMIN"))
        {
            <RadzenPanelMenuItem Text="Satisfaction Survey" Icon="tab">
                <RadzenPanelMenuItem Text="Dashboard" Path="dashboard" Icon="dashboard"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Units" Path="units" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Unit Types" Path="unit-types" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Unit Reviews" Path="unit-reviews" Icon="table_view"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }
        @if (context.User.IsInRole("ADMIN") || context.User.IsInRole("ManageCategories"))
        {
            <RadzenPanelMenuItem Text="Catalogue" Icon="view_list">
                <RadzenPanelMenuItem Text="Positions" Path="positions" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Departments" Path="departments" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="File Folders" Path="file-folders" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="File Types" Path="file-types" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Issuing Agency" Path="issuing-agency" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Document Files" Path="document-file" Icon="table_view"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }
        @if (context.User.IsInRole("ADMIN") || context.User.IsInRole("REPORTS"))
        {
            <RadzenPanelMenuItem Text="Reports" Icon="view_list">
                <RadzenPanelMenuItem Text="Positions" Path="positions" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Departments" Path="departments" Icon="table_view"></RadzenPanelMenuItem>

            </RadzenPanelMenuItem>
        }

        @if (context.User.IsInRole("ADMIN"))
        {
            <RadzenPanelMenuItem Text="Departments - Personal" Icon="account_box">
                <RadzenPanelMenuItem Text="Workflow" Path="workflow" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Documents Shared With Me" Path="share-with-me" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Contacts" Path="contact" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Work Management" Path="work-management" Icon="table_view"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }

        @if (context.User.IsInRole("ADMIN"))
        {
            <RadzenPanelMenuItem Text="Administrator" Icon="account_box">
                <RadzenPanelMenuItem Text="Users" Path="users" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Roles" Path="roles" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="App Config" Path="rolesx" Icon="table_view"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="App History" Path="rolesx1" Icon="table_view"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        }






    </AuthorizeView>


</RadzenPanelMenu>