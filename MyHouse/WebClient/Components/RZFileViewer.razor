@inherits BaseBlazorPage
@inject NavigationManager _navigationManager;
@inject IJSRuntime JS

<div style="display: flex;justify-content:left;gap: 10px">
    <RadzenButton Text="Download File" Click="async () => { await DownloadFile(); }" Icon="download"/>

    @if (Extension.Contains("pdf"))
    {
        <RadzenButton Text="Print" Icon="local_printshop" Click="async () => { await PrintFile(); }"/>
    }
</div>
<RZBR></RZBR>

@if (Extension.Contains("pdf"))
{
    <iframe id="bv-199" src="@URL#toolbar=0" type="application/pdf" style="width: 100%;height: 80vh;"></iframe>
}